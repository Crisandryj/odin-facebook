<% @requests.each do |r| %>
  <% if r.invitee.id == current_user.id  && r.accepted == false%>
    <%= User.find(r.invitor.id).email %>
    <%= button_to "Accect Request", edit_request_path(r, accepted: true), method: :put %>
    <%= button_to "Decline Request", r, method: :delete %>
  <% end %>
<% end %>
