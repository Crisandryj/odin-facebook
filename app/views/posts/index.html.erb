<% @posts.each do |post| %>
  <p>
    <%= post.user.email %>
  </p>
  <li><%= post.body %></li>
  <li>Number of likes:
    <%= post.likes.count %></li>
  <%= form_with model: @post do |form| %>
  <ul>
    <%= form.fields_for :comments do |comments_form| %>
    <li>
      <%= comments_form.label :body, "Comment:" %>
      <%= comments_form.text_field :body %>

      <%= comments_form.submit "Submit"%>
    </li>
  <% end %>
</ul>
<% end %>
<p>
<%= button_to "delete post", post, method: :delete %>
</p>
<p>
<%= button_to "like", controller: "likes", action: "create", post_id: post.id, user_id: current_user.id, like: true %>
</p>
<% end %>
