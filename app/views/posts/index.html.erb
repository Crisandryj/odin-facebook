<div class="header">
  <h2>Blog Name</h2>
</div>

<div class="row">
  <div class="leftcolumn">
    <%= form_with model: @post do |post| %>

        <%= post.hidden_field :user_id, value: current_user.id%>

        <%= post.label :body, "Post:" %>
        <%= post.text_field :body %>

        <%= post.submit "Submit"%>
    <% end %>
    <% if current_user.posts || current_user.friends.posts %>

    <% @posts.each do |post| %>
      <p>
        <%= post.user.email %>
      </p>
      <li><%= post.body %></li>
      <li>Number of likes:
        <%= post.likes.count %></li>

      <li>Comments:
        <% post.comments.each do |c| %>
        <p><%= c.body %></p>
        <% end %>
        <%= form_with model: @comment do |form| %>
        <ul>
          <li>
            <%= form.hidden_field :user_id, value: current_user.id%>
            <%= form.hidden_field :post_id, value: post.id%>

            <%= form.label :body, "Comment:" %>
            <%= form.text_field :body %>

            <%= form.submit "Submit"%>
          </li>
        </ul>
      <% end %>
      <p>
        <%= button_to "delete post", post, method: :delete %>
      </p>
      <p>
        <%= button_to "like", controller: "likes", action: "create", post_id: post.id, user_id: current_user.id, like: true %>
      </p>
    <% end %>
    <% end %>
  </div>
  <div class="rightcolumn">
    <div class="card">
      <h2>About Me</h2>
      <div class="fakeimg" style="height:100px;">Image</div>
      <p>Some text about me in culpa qui officia deserunt mollit anim..</p>
    </div>
    <div class="card">
      <h3>Popular Post</h3>
      <div class="fakeimg">Image</div><br>
      <div class="fakeimg">Image</div><br>
      <div class="fakeimg">Image</div>
    </div>
    <div class="card">
      <h3>Follow Me</h3>
      <p>Some text..</p>
    </div>
  </div>
</div>

<div class="footer">
  <h2>Footer</h2>
</div>
